<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".pwrcalc"
    android:background="@drawable/b4"
    android:gravity="center">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Power and Root Calculator"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="20sp"
        android:textColor="#E14B13"
        android:textSize="50sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="ⁿ√a"
            android:textColor="#E14B13"
            android:background="#33F44300"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="aⁿ"
            android:textColor="#E14B13"
            android:background="#33F44300"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="a"
            android:textColor="#E14B13"
            android:background="#33F44300"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"/>
        <EditText
            android:id="@+id/a"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="Base"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="n"
            android:textColor="#E14B13"
            android:background="#33F44300"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"/>
        <EditText
            android:id="@+id/b"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="Exponent"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Calculate Root"
            android:fontFamily="@font/lemon"
            android:textSize="15dp"
            android:onClick="b1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#E14B13"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:onClick="b2"
            android:text="Calculate Power"
            android:fontFamily="@font/lemon"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#E14B13"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/lemon"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#E14B13"/>
</LinearLayout>