<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sicalc"
    android:background="@drawable/b10"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amarante"
        android:text="Simple Interest Calculator"
        android:gravity="center"
        android:textColor="#251A1A"
        android:textStyle="bold"
        android:textSize="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="Principal"
            android:textColor="#251A1A"
            android:background="#33251A1A"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:layout_margin="25dp"/>

        <EditText
            android:id="@+id/sprinc"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="(Rupees)"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="Time"
            android:textColor="#251A1A"
            android:background="#33251A1A"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:layout_margin="25dp"/>

        <EditText
            android:id="@+id/stime"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="(Years)"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="Rate of Interest"
            android:textColor="#251A1A"
            android:background="#33251A1A"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:layout_margin="25dp"/>

        <EditText
            android:id="@+id/sroi"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="(Per Annum)"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Calculate"
        android:fontFamily="@font/lemon"
        android:id="@+id/calculatesi"
        android:onClick="valsi"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_margin="25dp"
        android:background="#7B7BFD"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="Simple Interest"
            android:textColor="#251A1A"
            android:background="#33251A1A"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="15dp"
            android:layout_margin="25dp"/>

        <TextView
            android:id="@+id/siresult"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#251A1A"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="25dp"
            android:hint="Result"/>
    </LinearLayout>
</LinearLayout>