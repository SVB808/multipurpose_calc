<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".quadcalc"
    android:background="@drawable/b8"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roots of a Quadratic Equation Calculator"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="axÂ² + bx + c (a != b)"
            android:textColor="#FFFFFF"
            android:background="#4DFFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="a"
            android:textColor="#FFFFFF"
            android:background="#4DFFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/aq"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="15dp"
            android:hint="Coefficient 1"
            android:textColorHint="#80FFFFFF"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="b"
            android:textColor="#FFFFFF"
            android:background="#4DFFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/bq"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="15dp"
            android:hint="Coefficient 2"
            android:textColorHint="#80FFFFFF"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:text="c"
            android:textColor="#FFFFFF"
            android:background="#4DFFFFFF"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/cq"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_margin="15dp"
            android:hint="Coefficient 3"
            android:textColorHint="#80FFFFFF"
            android:inputType="numberDecimal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quadb"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="Calculate Roots"
            android:fontFamily="@font/lemon"
            android:textSize="20dp"
            android:onClick="calq"
            android:textStyle="bold"
            android:textColor="#4B3621"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:fontFamily="@font/lemon"
            android:textColor="#FFFFFF"
            android:background="#4DFFFFFF"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:id="@+id/qr"/>
    </LinearLayout>
</LinearLayout>